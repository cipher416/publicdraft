{
  "name": "publicdraft",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "build:web": "turbo run build --filter=web",
    "start:web": "turbo run start --filter=web",

    "build:api": "turbo run build --filter=server",
    "start:api": "turbo run start --filter=server",
    "db:push": "turbo -F @publicdraft/db db:push",
    "db:studio": "turbo -F @publicdraft/db db:studio",
    "db:generate": "turbo -F @publicdraft/db db:generate",
    "db:migrate": "turbo -F @publicdraft/db db:migrate"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/cors": "^1.4.0",
    "elysia": "^1.4.16",
    "@tiptap/core": "^3.11.0",
    "@tiptap/extension-collaboration": "^3.11.0",
    "@tiptap/extension-collaboration-cursor": "^2.26.2",
    "@tiptap/react": "^3.11.0",
    "@tiptap/starter-kit": "^3.11.0",
    "dotenv": "^17.2.3",
    "lib0": "^0.2.114",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "tsdown": "^0.15.12",
    "@types/bun": "^1.3.2"
  },
  "packageManager": "bun@1.3.0"
}
