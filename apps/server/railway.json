{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install --frozen-lockfile && bun run build",
    "watchPatterns": [
      "src/**",
      "package.json",
      "bun.lock",
      "tsconfig*.json",
      "bunfig.toml"
    ]
  },
  "deploy": {
    "startCommand": "bun run start",
    "healthcheckPath": "/ping",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
