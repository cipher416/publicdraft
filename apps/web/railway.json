{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install --frozen-lockfile && bun run build",
    "watchPatterns": [
      "src/**",
      "index.html",
      "package.json",
      "bun.lock",
      "vite.config.*",
      "tsconfig*.json",
      "tailwind.config.*"
    ]
  },
  "deploy": {
    "staticOutputPath": "dist"
  }
}
